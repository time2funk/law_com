{% block menuSection %}
<div class="main_menu" id="top_menu">
	<div class="left_side side">
	{% spaceless %}
		<ul class="menu_ul">
				<li id="menu-pa" class="menu_li">
					{% if route starts with 'plugins_practic_area_' %}
							{% set selected = 'selected' %}
					{% else %}
							{% set selected = '' %}
					{% endif %}
					<a href="{{ path('plugins_practic_area_homepage') }}" title="practic areas" class="{{ selected }}">practice areas</a>
				</li>
			<li id="menu-news" class="menu_li space">
				{% if route starts with 'plugins_news_' %}
						{% set selected = 'selected' %}
				{% else %}
						{% set selected = '' %}
				{% endif %}
				<a href="{{ path('plugins_news_homepage') }}" title="news & views" class="{{ selected }}">news & views</a>
			</li>
			<div class="hever_line"></div>
		</ul>
	{% endspaceless %}
	</div>

	<div class="center">
		<div class="logo">
			<a href="{{ path('app_index') }}">
				<img src="{{ asset("/img/logo.png") }}" alt="Sharova Law Firm">
			</a>
		</div>
	</div>

	<div class="right_side side">
	{% spaceless %}
		<ul class="menu_ul">
			<li id="menu-about" class="menu_li space">
				<a href="{{ path('app_about_us') }}" title="about us" class="{{ route == 'app_about_us' ? 'selected' }}">about us</a>
			</li>
			<li id="menu-contacts" class="menu_li">
				<a href="{{ path('app_contact') }}" title="contact us" class="{{ route == 'app_contact' ? 'selected' }}">contact us</a>
			</li>
			<div class="hever_line"></div>
		</ul>
	{% endspaceless %}
	</div>
</div>
{% endblock %}
